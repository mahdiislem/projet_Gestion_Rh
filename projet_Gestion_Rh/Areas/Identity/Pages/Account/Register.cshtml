@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<style>
    body {
        background-color: #edf1f5; /* Set a light background color */
    }

    .register-container {
        background-color: #deecfa; /* Set a light background color */

        max-width: 800px; /* Limit the maximum width of the container */
        margin: 50px auto; /* Center the container */
        padding: 20px; /* Add some padding */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Add a subtle box shadow */
    }

    .image-container {
        max-width: 100%; /* Make the container full-width */
        margin-bottom: 20px; /* Add some spacing between image and form */
    }

    h1 {
        text-align: center;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        font-size: 0.9rem;
    }

    .form-control {
        border: 1px solid #ced4da;
        border-radius: 5px;
        padding: 10px;
        width: 100%;
    }

    .btn-primary {
        width: 100%;
        padding: 10px;
        background-color: #28a745; /* Set the background color to green */
        border: 1px solid #28a745; /* Set the border color to green */
        color: #fff; /* Set the text color to white */
    }
</style>

<h1>@ViewData["Title"]</h1>

<div class="container">
    <div class="row">
        <!-- Image Card -->
        <div class="col-md-6">
            <div class="image-container">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp" class="img-fluid" alt="Sample image">
            </div>
        </div>

        <!-- Registration Form Card -->
        <div class="col-md-6">
            <div class="register-container">
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <h2>Create a new account.</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly"></div>

                    <div class="form-group">
                        <label asp-for="Input.Firstname" class="form-label"><strong>First Name</strong></label>
                        <input asp-for="Input.Firstname" class="form-control" placeholder="Enter your first Name" autocomplete="Firstname" aria-required="true" />
                        <span asp-validation-for="Input.Firstname" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Input.Lastname" class="form-label"><strong>Last Name</strong></label>
                        <input asp-for="Input.Lastname" class="form-control" placeholder="Enter your Last name" autocomplete="Lastname" aria-required="true" />
                        <span asp-validation-for="Input.Lastname" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Input.Email" class="form-label"><strong>Email address</strong></label>
                        <input asp-for="Input.Email" class="form-control" placeholder="Enter a valid email address" autocomplete="username" aria-required="true" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Input.Password" class="form-label"><strong>Password</strong></label>
                        <input asp-for="Input.Password" type="password" class="form-control" placeholder="Enter password" autocomplete="new-password" aria-required="true" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Input.ConfirmPassword" class="form-label"><strong>Confirm Password</strong></label>
                        <input asp-for="Input.ConfirmPassword" type="password" class="form-control" placeholder="Enter Confirm password" autocomplete="new-password" aria-required="true" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <button id="registerSubmit" type="submit" class="btn btn-primary">Register</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
