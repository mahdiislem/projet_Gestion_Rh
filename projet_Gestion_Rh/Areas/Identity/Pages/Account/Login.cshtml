@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<style>
    body {
        background-color: #f8f9fa; /* Set a light background color */
    }

    .login-container {
        border: 1px solid #ccc; /* Add a border */
        border-radius: 10px; /* Add border-radius for rounded corners */
        background-color: #fff; /* Set a white background color */
        max-width: 400px; /* Limit the maximum width of the container */
        margin: 50px auto; /* Center the container */
        padding: 20px; /* Add some padding */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Add a subtle box shadow */
    }

    .image-container {
        max-width: 100%; /* Make the container full-width */
        margin: 50px auto; /* Center the container */
    }

    h1 {
        text-align: center;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        font-size: 0.9rem;
    }

    .form-control {
        border: 1px solid #ced4da;
        border-radius: 5px;
        padding: 10px;
        width: 100%;
    }

    .btn-primary {
        width: 100%;
        padding: 10px;
        background-color: #28a745; /* Set the background color to green */
        border: 1px solid #28a745; /* Set the border color to green */
        color: #fff; /* Set the text color to white */
</style>

<h1>Log in</h1>

<div class="container">
    <div class="row">
        <!-- Image Card -->
        <div class="col-md-6">
            <div class="image-container">
                <img src="/image/cover/Gestion RH_lofin.jpg" class="img-fluid" alt="Sample image">
            </div>
        </div>

        <!-- Login Form Card -->
        <div class="col-md-6">
            <div class="login-container">
                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Input.Email" class="form-label"><strong>Email address</strong></label>
                        <input asp-for="Input.Email" class="form-control" placeholder="Enter a valid email address" autocomplete="username" aria-required="true" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Input.Password" class="form-label"><strong>Password</strong></label>
                        <input asp-for="Input.Password" type="password" class="form-control" placeholder="Enter password" autocomplete="current-password" aria-required="true" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" asp-for="Input.RememberMe" />
                            <label class="form-check-label" asp-for="Input.RememberMe">@Html.DisplayNameFor(m => m.Input.RememberMe)</label>
                        </div>
                    </div>

                    <button id="login-submit" type="submit" class="btn btn-primary">Log in</button>

                    <div>
                        <p class="small mt-2">
                            <a asp-page="./Register" class="link-danger" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
