@model projet_Gestion_Rh.Models.Employe

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <div class="alert alert-danger mt-3" role="alert">
        <h3>Are you sure you want to delete this?</h3>
    </div>

    <div class="card mt-4 col-md-6 offset-md-3">
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <div class="image-container">
                        <img src="/@Model.Image" style="width: 100px; height: 100px; padding: 5px; object-position: top right;" class="img-thumbnail" alt="Employee image" />
                        <div class="profile-title" style="font-size: 24px; margin-top: 10px;">
                            Profile
                        </div>
                        <div style="font-size: 18px; margin-top: 5px;">
                            <strong>@Model.NomPrenom</strong>
                        </div>
                    </div>
                </div>

                <div class="col-md-8">
                    <h4 class="card-title display-5">Employee Details</h4>
                    <hr />

                    <dl class="row">
                        <dt class="col-sm-4">Full Name</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.NomPrenom)</dd>

                        <dt class="col-sm-4">Date of Birth</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.DateNaissance)</dd>

                        <dt class="col-sm-4">Gender</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Genre)</dd>

                        <dt class="col-sm-4">Telephone</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Telephone)</dd>

                        <dt class="col-sm-4">Address</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Adresse)</dd>

                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                        <dt class="col-sm-4">Date of Hiring</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.DateEmbauche)</dd>

                        <dt class="col-sm-4">Department</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Departement.Nom)</dd>
                        <dt class="col-sm-4">Position</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Poste.Titre)</dd>
                    </dl>
                </div>
            </div>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="EmployeId" />

                <div class="d-flex justify-content-between">
                    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-***" crossorigin="anonymous" />
                    <a asp-action="Index" class="btn btn-success text-start">
                        <i class="fas fa-caret-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-outline-danger text-end">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
