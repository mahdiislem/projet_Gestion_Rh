@model projet_Gestion_Rh.Models.Employe

@{
    ViewData["Title"] = "Edit";
}

<style>
    

    fieldset {
        border: 1px solid #ddd;
        margin-bottom: 20px;
    }

    legend {
        padding: 5px 10px;
        border: 1px solid gray;
        background-color: #f5f5f5;
    }
</style>

<h1>Modifier Information</h1>
<hr />
<div class="container-fluid">
    <div class="row">
        <div class="col-md-4">
            <div class="image-container">
                <img src="/@Model.Image" style="width: 200px; height: 200px; padding: 5px;object-position: top right;" class="img-thumbnail" alt="Employee image" />
                <div class="profile-title" style="font-size: 24px; margin-top: 10px;">
                    Profile
                </div>
                <div style="font-size: 18px; margin-top: 5px;">
                   <strong> @Model.NomPrenom</strong>
                </div>
            </div>
        </div>

        <div class="col-md-8 mx-auto">
            <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <fieldset>
                <legend>Personal Information</legend>

                <div class="form-group row">
                    <label class="col-md-2 col-form-label" asp-for="NomPrenom">Full Name</label>
                    <div class="col-md-4">
                        <input asp-for="NomPrenom" class="form-control" placeholder="Enter full name" />
                        <span asp-validation-for="NomPrenom" class="text-danger"></span>
                    </div>

                    <label class="col-md-2 col-form-label" asp-for="DateNaissance">Date of Birth</label>
                    <div class="col-md-4">
                        <input asp-for="DateNaissance" type="Date" class="form-control" />
                        <span asp-validation-for="DateNaissance" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-2 col-form-label" asp-for="Genre">Gender</label>
                    <div class="col-md-4">
                        <div>
                            <label class="radio-inline">
                                <input asp-for="Genre" type="radio" value="Homme" /> Male
                            </label>
                            <label class="radio-inline">
                                <input asp-for="Genre" type="radio" value="Femme" /> Female
                            </label>
                        </div>
                        <span asp-validation-for="Genre" class="text-danger"></span>
                    </div>

                    <label class="col-md-2 col-form-label" asp-for="Telephone">Telephone</label>
                    <div class="col-md-4">
                        <input asp-for="Telephone" class="form-control" />
                        <span asp-validation-for="Telephone" class="text-danger"></span>
                    </div>
                </div>
            </fieldset>

            <fieldset>
                <legend>Contact Information</legend>

                <div class="form-group row">
                    <label class="col-md-2 col-form-label" asp-for="Adresse">Address</label>
                    <div class="col-md-4">
                        <input asp-for="Adresse" class="form-control" />
                        <span asp-validation-for="Adresse" class="text-danger"></span>
                    </div>

                    <label class="col-md-2 col-form-label" asp-for="Email">Email</label>
                    <div class="col-md-4">
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
            </fieldset>

            <fieldset>
                <legend>Employment Information</legend>

                <div class="form-group row">
                    <label class="col-md-2 col-form-label" asp-for="DateEmbauche">Date of Hiring</label>
                    <div class="col-md-4">
                        <input asp-for="DateEmbauche" type="Date" class="form-control" />
                        <span asp-validation-for="DateEmbauche" class="text-danger"></span>
                    </div>

                    <label class="col-md-2 col-form-label" asp-for="DepartementId">Department</label>
                    <div class="col-md-4">
                        <select asp-for="DepartementId" class="form-control" asp-items="@(new SelectList(ViewBag.DepartementsList,"DepartementId","Nom"))"></select>
                    </div>
                    <label class="col-md-2 col-form-label" asp-for="PosteId">Poste</label>
                    <div class="col-md-4">
                        <select asp-for="PosteId" class="form-control" asp-items="@(new SelectList(ViewBag.PostesList,"PosteId","Titre"))"></select>
                    </div>
                </div>
            </fieldset>

            <fieldset>
                <legend class="legend">Image</legend>

                <div class="form-group">
                    <label asp-for="imageFile" class="col-md-2 control-label"></label>
                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-md-6">
                                <input type="file" class="form-control" asp-for="imageFile" id="ChooseImg" />
                                <span asp-validation-for="imageFile" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <div class="mt-2">
                                    <img src="/@Model.Image" style="width: 100px; height: 100px; padding: 10px;" alt="Employee image" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


                <div class="form-group">
                    <div class="row">
                       
                        <div class="col-md-6 text-start">
                            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-***" crossorigin="anonymous" />
                            <a asp-action="Index" class="btn btn-outline-dark">
                                <i class="fas fa-caret-left"></i> Back to List
                            </a>
                        </div>
                        <div class="col-md-6 text-end">
                            <button type="submit" class="btn btn-success">Save</button>
                            </div>
                        </div>
                    </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
