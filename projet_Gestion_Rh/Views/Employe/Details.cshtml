@model projet_Gestion_Rh.Models.Employe

@{
    ViewData["Title"] = "Details";
}

<style>
    /* Custom styles for employee card */
    .employee-card {
        border: 1px solid #ccc;
        border-radius: 10px;
        padding: 10px;
        margin-top: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        text-align: right; /* Center text */
    }

    .employee-image {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        float: right; /* Align image to the bottom-right */
        margin-bottom: -20px; /* Adjust margin for better positioning */
        margin-right: -20px; /* Adjust margin for better positioning */
    }

    .card-title {
        font-size: 24px; /* Increase title font size */
        margin-bottom: 20px; /* Add margin for spacing */
    }

    .image-container {
        text-align: left; /* Align text to the left in the container */
    }
</style>

<h1>Employee Details</h1>

<div class="container">
    <div class="card employee-card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <div class="image-container">
                        <img src="/@Model.Image" style="width: 150px; border-radius: 20%; height: 150px; padding: 5px; object-position: top right;" class="img-thumbnail" alt="Employee image" />
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="profile-title" style="font-size: 24px; margin-top: 10px;">
                        Profile
                    </div>
                    <div style="font-size: 18px; margin-top: 5px;">
                        <strong> @Model.NomPrenom</strong>
                    </div>
                </div>
            </div>


            <dl class="row">
                <dt class="col-sm-4">Full Name</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.NomPrenom)</dd>

                <dt class="col-sm-4">Date of Birth</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.DateNaissance)</dd>

                <dt class="col-sm-4">Gender</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Genre)</dd>

                <dt class="col-sm-4">Telephone</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Telephone)</dd>

                <dt class="col-sm-4">Address</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Adresse)</dd>

                <dt class="col-sm-4">Email</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-4">Date of Hiring</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.DateEmbauche)</dd>

                <dt class="col-sm-4">Position</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Poste.Titre)</dd>

                <dt class="col-sm-4">Department</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Departement.Nom)</dd>
            </dl>

            <div class="container mt-3">
                <div class="row">
                    <div class="col-sm-6 text-start">
                        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-***" crossorigin="anonymous" />
                        <a asp-action="Index" class="btn btn-outline-dark">
                            <i class="fas fa-caret-left"></i> Back to List
                        </a>
                    </div>
                    <div class="col-sm-6 text-end">
                        <a asp-action="Edit" asp-route-id="@Model?.EmployeId" class="btn btn-success">Edit</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

