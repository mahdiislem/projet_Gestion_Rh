@model projet_Gestion_Rh.Models.Poste

@{
    ViewData["Title"] = "Delete";
}

<!DOCTYPE html>
<html>

<head>
    <style>
        body {
            animation: gradientBackground 10s infinite;
            font-family: 'Arial', sans-serif;
        }

        /* Style the alert container */
        .alert-container {
            width: 50%;
            margin: auto;
            margin-top: 50px;
        }

        /* Style the danger alert */
        .alert-danger {
            border: 1px solid #dc3545;
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 20px;
            background-color: #f8d7da;
            color: #721c24;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        /* Style the form container */
        .delete-form-container {
            text-align: center;
        }

        /* Style the form submit button */
        .btn-danger {
            width: 150px; /* Set a fixed width for the button */
            background-color: #dc3545; /* Red color */
            color: white; /* White text color */
            transition: transform 0.3s ease-in-out;
        }

            .btn-danger:hover {
                transform: scale(1.1);
            }

        /* Style the details list */
        .details-list {
            margin-top: 20px;
            border: 1px solid #ddd;
            border-radius: 10px;
            padding: 15px;
            background-color: #f8f9fa;
        }
    </style>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-***" crossorigin="anonymous" />

</head>

<body>

    <div class="alert-container">
        <div class="alert-danger">

            <h3>Warning!</h3>
           <p>
                <i class="fas fa-trash-alt"></i>
                 Are you sure you want to delete this?
           </p> 
        </div>
    </div>

    <div class="details-list">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Titre)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Titre)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.salaire)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.salaire)
            </dd>
        </dl>
    </div>

    <div class="delete-form-container">
        <form asp-action="Delete">
            <input type="hidden" asp-for="PosteId" />
            <div class="form-group">
           
                    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-***" crossorigin="anonymous" />
                <a asp-action="Index" class="btn btn-outline-success">
                        <i class="fas fa-caret-left"></i> Back to List  
                    </a>  |
                
                <input type="submit" value="Delete" class="btn btn-danger" />
                
            </div>
        </form>
    </div>

   

</body>

</html>
