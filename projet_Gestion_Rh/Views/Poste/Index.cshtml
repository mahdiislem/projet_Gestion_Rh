@model IEnumerable<projet_Gestion_Rh.Models.Poste>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html>
<head>
  <style>
    body {
        animation: gradientBackground 10s infinite;
        font-family: 'Arial', sans-serif;
    }


    /* Style the list items */
    .list-group-item {
        border: 1px solid #ddd;
        border-radius: 10px;
        padding: 15px;
        margin-bottom: 15px;
            background-color: #a7cbd9;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease-in-out;
    }

    .list-group-item:hover {
        transform: scale(1.05);
    }

    /* Style the buttons */
    .btn {
        transition: transform 0.3s ease-in-out;
    }

    .btn:hover {
        transform: scale(1.1);
    }

    /* Add some spacing between items */
    .mb-3 {
        margin-bottom: 2rem;
    }

    /* Edit button color */
    .btn-warning {
        background-color: #f5bd4e;
        border-color: #f5bd4e;
    }

        .list-group-item h5 {
            font-weight: bold;
            font-size: 1.2em;
            margin-bottom: 0.5em;
        }

        .list-group-item p {
            font-size: 0.9em;
            margin-bottom: 1em;
        }

        .delete-icon {
            color: white;
        }

        .edit-icon {
            color: white;
        }
</style>


    <!-- Include Font Awesome stylesheet in the head of your HTML document -->
</head>

<body>

<h1 class="mb-4">      <i class="fas fa-briefcase"></i>
Poste List</h1>

    <p class="text-end">

        <button type="button" class="btn btn-outline-dark" onclick="window.location.href='@Url.Action("Create")'">
            <i class="fas fa-plus"></i> Create New
        </button>
    </p>


    <div class="list-group">
        @foreach (var item in Model)
        {
            <div class="list-group-item list-group-item-action mb-3">
                <div class="row">
                    <div class="col-md-8">
                        <h5 class="mb-1">@Html.DisplayFor(modelItem => item.Titre)</h5>
                        <p class="mb-1">@Html.DisplayFor(modelItem => item.Description)</p>
                    </div>
                    <div class="col-md-4 text-end">
                        <small class="fw-bold">
                            <i class="fas fa-dollar-sign"></i>
                            Salary:
                        </small>
                        <small>@Html.DisplayFor(modelItem => item.salaire)</small>
                    </div>
                </div>
                <div class="d-flex justify-content-end mt-2">
                    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-***" crossorigin="anonymous" />

                    <a asp-action="Edit" asp-route-id="@item.PosteId" class="btn btn-warning me-2">
                        <i class="fas fa-edit"></i>
                        </a>
                    <a asp-action="Delete" asp-route-id="@item.PosteId" class="btn btn-danger">
                        <i class="fas fa-trash-alt"></i>
                        
                    </a>
                </div>
            </div>
        }
    </div>

</body>

</html>