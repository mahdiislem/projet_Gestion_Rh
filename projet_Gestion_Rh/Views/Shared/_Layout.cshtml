<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <title>@ViewData["Title"] - projet_Gestion_Rh</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/projet_Gestion_Rh.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.17.0/font/bootstrap-icons.css">
    <style>
        body {
            background-color: #f0f0f0; /* Light gray background color */
        }

        .navbar {
            background-color: #343a40; /* Dark background color for the navbar */
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1); /* Subtle shadow effect */
        }

        .navbar-brand {
            font-size: 24px;
        }

        .navbar-toggler {
            border: none; /* Remove border from the toggle button */
        }

        .navbar-toggler-icon {
            font-size: 24px; /* Set the font size for the toggle button icon */
            color: #fff; /* White color for the toggle button icon */
        }

        .sidebar {
            height: 100%;
            width: 0;
            position: fixed;
            z-index: 1;
            top: 0;
            left: 0;
            background-color: #001a33; /* Bleu foncé pour la sidebar */
            color: #818181;
            overflow-x: hidden;
            transition: 0.5s;
            padding-top: 60px;
        }

            .sidebar a {
                padding: 8px 8px 8px 32px;
                text-decoration: none;
                font-size: 18px;
                color: #818181;
                display: block;
                transition: 0.3s;
            }

                .sidebar a:hover {
                    color: #f1f1f1;
                }

            .sidebar .closebtn {
                position: absolute;
                top: 0;
                right: 25px;
                font-size: 36px;
                margin-left: 50px;
            }

        #main {
            transition: margin-left .5s;
            padding: 16px;
        }

        .container {
            margin-top: 20px; /* Add margin space at the top */
        }

        .footer {
            background-color: #343a40; /* Dark background color for the footer */
            color: #fff; /* White text color for the footer */
            padding: 10px 0;
        }

        .icon-margin {
            margin-right: 8px; /* ou la valeur de marge que vous préférez */
        }

        .custom-bg-darkblue {
            background-color: #001f3f; /* Remplacez cette valeur par la couleur bleu foncé que vous préférez */
            color: #fff; /* Couleur du texte en blanc pour contraster */
            /* Ajoutez d'autres styles si nécessaire */
        }

        .text-white {
            color: #fff; /* Couleur blanche */
        }

        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-***" crossorigin="anonymous" / >
    </style>
</head>
<body>
    <header>
        <div id="mySidebar" class="sidebar">
            <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">×</a>
            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                <i class="fas fa-home"></i>
                Home
            </a>


            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">
                <i class="fas fa-info-circle"></i>
                About
            </a>
            <a class="nav-link" asp-area="" asp-controller="Employe" asp-action="Index">
                <i class="fas fa-user"></i>
                List Employees
            </a>
            <a class="nav-link" asp-area="" asp-controller="Departement" asp-action="Index">
                <i class="fas fa-building"></i>
                Départements
            </a>

              <a class="nav-link" asp-area="" asp-controller="Poste" asp-action="Index">
                <i class="fas fa-briefcase"></i>
                Poste

            </a>

   <a class="nav-link" asp-area="" asp-controller="Conge" asp-action="Index">
                <i class="far fa-calendar-alt"></i>
                Conge
            </a>
        </div>

        <div id="main">
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm custom-bg-darkblue border-right box-shadow mb-3">
                <div class="container-fluid">

                    <span style="font-size:30px;cursor:pointer; color: #fff;" onclick="openNav()">☰</span>&nbsp;&nbsp;&nbsp;

                    <a class="navbar-brand navbar-dark text-white font-weight-bold" asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-house-door"></i> Gestion RH
                    </a>



                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <!-- Add your links here if needed -->
                        </ul>

                        <!-- Add the search form inside the navbar -->
                        <form class="d-flex" method="get" action="@Url.Action("Index", "Employe")">
                            <input class="form-control me-2" type="search" name="search" placeholder="Search" aria-label="Search">
                            <button class="btn btn-outline-light" type="submit">
                                <i class="bi bi-search"></i> Search
                            </button>
                        </form>
                    </div>
                </div>
                <div class="text-white">
            <partial name="_LoginPartial"/>

            </div>
            </nav>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

<footer class="text-center text-white custom-bg-darkblue">
    <div class="container p-4 pb-0">
      <section class="">
        <p class="d-flex justify-content-center align-items-center">
          <button data-mdb-ripple-init type="button" class="btn btn-outline-light btn-rounded">
              RhWeAreTeam.com 
          </button>
        </p>
      </section>
    </div>
        <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">

      <a class="text-white" href="https://mdbootstrap.com/"> Entreprise We Are Team</a>
    </div>

    </div>
    <!-- Copyright -->
  </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        function openNav() {
            document.getElementById("mySidebar").style.width = "250px";
            document.getElementById("main").style.marginLeft = "250px";
        }

        function closeNav() {
            document.getElementById("mySidebar").style.width = "0";
            document.getElementById("main").style.marginLeft = "0";
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


