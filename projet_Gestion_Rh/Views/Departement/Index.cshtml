@model IEnumerable<projet_Gestion_Rh.Models.Departement>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
<div class="container">
    <h1>    <i class="fas fa-building"></i>
    Department List
</h1>

    <p class="text-end">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-***" crossorigin="anonymous" />

        <button type="button" class="btn btn-outline-dark" onclick="window.location.href='@Url.Action("Create")'">
            <i class="fas fa-plus"></i> Create New
        </button>
    </p>


    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card mb-3" style="max-width: 540px;">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <!-- Replace 'src' with the actual image URL -->
                            <img src="/image/cover/departement.jpg" class="img-fluid rounded-start" alt="Department Image" style="height: 100%;">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <strong style="color: #333;">@Html.DisplayFor(modelItem => item.Nom)</strong>
                                </h5>
                                <p class="card-text" style="font-size: 12px;">
                                    <strong style="color: #555;">Description:</strong> @Html.DisplayFor(modelItem => item.Description)<br />
                                    <strong style="color: #555;">Nom Responsable:</strong> @Html.DisplayFor(modelItem => item.NomResponsable)
                                </p>
                                <a asp-action="Edit" asp-route-id="@item.DepartementId" class="btn btn-dark">Edit</a>
                                <a asp-action="GetEmploye" asp-route-id="@item.DepartementId" class="btn btn-info">Info List</a>
                                <a asp-action="Delete" asp-route-id="@item.DepartementId" class="btn btn-danger">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
