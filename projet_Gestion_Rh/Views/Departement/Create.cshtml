@model projet_Gestion_Rh.Models.Departement

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <h1>Create Departement</h1>
    <hr />

    <div class="card mt-3">
        <div class="card-body">
            <h4 class="card-title">Departement Information</h4>
            <form asp-action="Create" class="mt-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Nom" class="form-label">
                        <strong>Departement Name</strong>
                    </label>
                    <input asp-for="Nom" class="form-control" />
                    <span asp-validation-for="Nom" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">
                        <strong>Description</strong>
                    </label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="NomResponsable" class="form-label">
                        <strong> Responsable Name</strong>
                    </label>
                    <input asp-for="NomResponsable" class="form-control" />
                    <span asp-validation-for="NomResponsable" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <div class="row">
                        <div class="col-md-6 text-start">
                            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-***" crossorigin="anonymous" />
                            <a asp-action="Index" class="btn btn-outline-success">
                                <i class="fas fa-caret-left"></i> Back to Departements
                            </a>
                        </div>
                        <div class="col-md-6 text-end">
                            <button type="submit" class="btn btn-dark">Create</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


